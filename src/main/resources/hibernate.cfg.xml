<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--         url -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate2</property>

        <!--        username-->
        <property name="hibernate.connection.username">hbstudent</property>

        <!--        password-->
        <property name="hibernate.connection.password">hbstudent</property>

        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.format_sql">true</property>

        <!--        &lt;!&ndash; Update the schema &ndash;&gt;-->
        <!--        <property name="hibernate.hbm2ddl.auto">create</property>-->

        <!--        &lt;!&ndash; Second-level cache settings &ndash;&gt;-->
        <!--        <property name="hibernate.cache.use_second_level_cache">true</property>-->
        <!--        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>-->
        <!--        <property name="hibernate.cache.use_query_cache">true</property>-->
    </session-factory>
</hibernate-configuration>